 Heading.jsx :
const react = require("react");

function Heading() {
  return (
    <header>
      <h1>DevTown</h1>
    </header>
  );
}

export default Heading;

Footer.jsx :
const react = require("react");

function Footer() {
  const currYear = new Date().getFullYear();
  return (
    <footer>
      <p>Copyright @ {currYear}</p>
    </footer>
  );
}

export default Footer;

Notes.jsx :
const react = require("react");

function Note() {
  return (
    <div className="note">
      <h1>DevTown</h1>
      <p>A place to Learn and Grow on you own pace</p>
    </div>
  );
}

export default Note;

App.jsx :
import Heading from "./Heading";
import Footer from "./Footer";
import Note from "./Note";
const react = require("react");

function App() {
  return (
    <div>
      <Heading />
      <Note />
      <Footer />
    </div>
  );
}

export default App;


